<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">
 
	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/menu**" access="permitAll" />
		<form-login login-page="/" default-target-url="/menu"
			authentication-failure-url="/loginfailed" />
		<logout logout-success-url="/logout" />
	</http>
 
	<authentication-manager>
	  <authentication-provider>
	    <user-service>
		<user name="enseignant" password="pass" authorities="ROLE_Enseignant" />
		<user name="directeur" password="pass" authorities="ROLE_Directeur" />
		<user name="responsable" password="pass" authorities="ROLE_Responsable" />
		<user name="administrateur" password="pass" authorities="ROLE_Administrateur" />
	    </user-service>
	  </authentication-provider>
	</authentication-manager>
 
</beans:beans>